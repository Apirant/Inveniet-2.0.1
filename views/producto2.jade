                                img(src='iusuarios/#{Usuario.img}')
                              else
                                img(src='img/img-usuario.png')
                            
                            // Contenedor del Comentario
                            .comment-box
                              .comment-head
                                h8.comment-name #{coment.nombre_usuario}
                                span #{coment.fecha}
                                i.fa.fa-heart
                              .comment-content
                                | #{coment.mensaje}


