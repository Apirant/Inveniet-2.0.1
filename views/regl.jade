extends encabezado.jade
block contenido
  
      // Identificador
      .row(style='height: 30px; background: #01474F; color: white;')
        p(align='center', style='margin-top: 1px; font-size: 18px;') Registrar Local
      
      form(action='/regl', method='post', autocomplete='off')
        // Columnas
        .row
          // separador
          .col-md-1  
          // Columna Izquierda
          .col-md-5
            .separador-top-sm
            // Titulo del la columna
            .row(align='left')
              .col-md-6
                span.sub(align='left') Datos de la Cuenta:
              .col-md-4
                span.input-lg.form-control(type='text',  style='font-size: 15px; color: #CACACA;') Reputación: 0
            .separador-top-sm
            // Elementos del la columna
            .row(align='right')
              p  
              .col-lg-10
                input#nombre.input-lg.form-control(type='text', name="nombre", placeholder='Nombre del local')
            .separador-top-sm
            .row(align='right')
              .col-lg-10
                input#Rif.input-lg.form-control(type='text', name="Rif", placeholder='Nº de Registro Fiscal')
            .separador-top-sm
            .row(align='right')
              .col-lg-10
                input#compania.input-lg.form-control(type='text', name="compania", placeholder='Compañía')
            .separador-top-sm
            .row(align='right')
              .col-lg-10
                .input-group
                  input#tipo.form-control(type='text',name="tipo", placeholder='Tipo de Local')
                  span.input-group-addon \/
            .separador-top-sm
            .row(align='right')
              .col-lg-10
                .input-group
                  input#correo.form-control(type='text', name="correo", placeholder='Email')
                  span.input-group-addon @gmail.com
            .separador-top-sm
            .row(align='right')
              .col-md-4
                input#contrasena.input-lg.form-control(type='password', name="contrasena", placeholder='Contraseña')
              .col-md-6
                input.input-lg.form-control(type='password', placeholder='Confirme su contraseña')
            .separador-top-sm
          // Columna Derecha
          .col-md-6
            .separador-top-sm
            // Titulo del la columna
            .row
              .col-md-7
                span.sub(align='left') Información de contacto:
            .separador-top-sm
            .row
              .col-lg-10
                .col-lg-20.Gmaps(align='center')
                  | Google Map
            .separador-top-sm
            .row
              .col-md-2
                input#pais.input-lg.form-control(type='text', name="pais", placeholder='País')
              .col-md-3
                input#estado.input-lg.form-control(type='text', name="estado", placeholder='Estado')
              .col-md-3
                input#municipio.input-lg.form-control(type='text', name="municipio", placeholder='Municipio')
              .col-md-2
                input#calle.input-lg.form-control(type='text', name="calle", placeholder='Calle')
            .separador-top-sm
            .row(align='right')
              .col-lg-10
                //span.input-lg.form-control(type='text') #{País}, #{Estado}
            .separador-top-sm
            .row(align='right')
              .col-md-6
                input#numero.input-lg.form-control(type='text', name="numero", placeholder='Número de Teléfono')
              .col-md-4
                button.btn.btn-info(type='button', style='background: #06B62D;') Comprobar Dirección
        // Boton de registrar
        .row(align='center')
          button.btn-primary.btn-R.btn.btn-lg(style='background: #F00E0E; width: 200px; height: 40px; margin-bottom: 20px; ')
            | Registrar
      // Lista de derechos de autor
      .row(align='center')
        div(style='background: #08292F; color: white; text-align: center; margin-left: 10px;')
          span Todos los derechos reservados
  // Ventana Ingresar
  // Ventana Modal (ingresar) codigo fuente
  script#Ingresar-Ventana(type='text/x-template').
    <transition name="modal">
    <div class="modal-mask">
    <div class="modal-wrapper">
    <div class="modal-container">
    <div class="modal-header">
    <slot name="header">
    Inveniet
    </slot>
    </div>
    <div class="modal-body">
    <slot name="body">
    <input type="text" placeholder="Correo electrónico" class="input-lg form-control" style="margin-bottom: 15px;" />
    <input type="password" placeholder="Contraseña" class="input-lg form-control" />
    </slot>
    </div>
    <div class="modal-footer">
    <slot name="footer">
    <div class="row" align="center">
    <div class="col-md-4" align="left">
    <button class="Btn-p" @click="$emit('close')" href="principal.html">Salir</button>
    </div>
    <div class="col-md-8" align="right">
    <a type="button" class="Btn-p" href="PaginaPrincipal.html">Iniciar Secsión</a>
    </div>
    </div>
    </slot>
    </div>
    </div>
    </div>
    </div>
    </transition>
  // Aplicación con Vuejs para la ventana (ingresar)
  script(type='text/javascript').
    Vue.component('ingresar', {
    template: '#Ingresar-Ventana'
    })
    new Vue({
    el:'#Ingresar',
    data: {
    showModal1: false
    }
    })
  // Ventana Registrar
  // Ventana Modal (Registrar) codigo fuente
  script#Registrar-Ventana(type='text/x-template').
    <transition name="modal">
    <div class="modal-mask">
    <div class="modal-wrapper">
    <div class="modal-container">
    <div class="modal-header">
    <slot name="header">
    Inveniet
    </slot>
    </div>
    <div class="modal-body">
    <slot name="body">
    <div class="row" id="tipo-cuenta">
    <a href="RegistrarLocal.html" id="tienda" class="col-md-5 Btn-p2 " onclick="Tcuenta(tienda)" style="margin-right: 20px; margin-left: 10px; background: white; text-align: center;">
    <img src="img/tienda-icono.png" class="img-responsive" alt="">
    Tienda
    </a>
    <a href="RegistrarUsuario.html" id="usuario" class="col-md-5 Btn-p2 " style="background: white; text-align: center;">
    <img src="img/user-icono.png" class="img-responsive" onmouseover="alert('entraste en el area del contenedor') alt="">
    Usuario
    </a>
    </div>
    </slot>
    </div>
    <div class="modal-footer">
    <slot name="footer">
    <div class="row" align="center">
    <button class="Btn-p" @click="$emit('close')" href="principal.html">regresar</button>
    </div>
    </slot>
    </div>
    </div>
    </div>
    </div>
    </transition>
  // Aplicación con Vuejs para la ventana (ingresar)
  script(type='text/javascript').
    Vue.component('modal', {
    template: '#Registrar-Ventana'
    })
    new Vue({
    el:'#Registrar',
    data: {
    showModal: false
    }
    })
